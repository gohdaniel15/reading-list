<h1>Daniel's Reading List</h1>

<%= link_to 'Add new book', new_book_path %>

<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Author</th>
    <th>Read</th>
    <th></th>
    <th></th>
  </thead>

  <tbody>
    <% @books.each.with_index(1) do |book, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.read %></td>
        <td><%= link_to 'Edit details', edit_book_path(book) %></td>
        <td><%= link_to 'Delete', book_path(book), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

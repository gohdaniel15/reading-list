<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Author</th>
    <th>Read</th>
  </thead>

  <tbody>
    <% @books.each.with_index(1) do |book, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.read %></td>
      </tr>
    <% end %>
  </tbody>
</table>
